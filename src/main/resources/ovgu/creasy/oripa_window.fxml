<?import javafx.scene.layout.VBox?>

<GridPane fx:id="grid" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ovgu.creasy.origami.oripa.ui.EstimationResultFrame">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
    <ColumnConstraints hgrow="SOMETIMES" percentWidth="70.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="5.0">
         <children>
            <Label fx:id="indexLabel" text="Folded Model [1/5]" />
            <ButtonBar buttonOrder="U+L_HE+FBIX_NCYOA_R" prefHeight="40.0" prefWidth="200.0">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#onPrevAction" text="◀ Prev" />
                  <Button mnemonicParsing="false" onAction="#onNextAction" text="Next ▶" />
               </buttons>
            </ButtonBar>
            <Separator prefWidth="200.0" />
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <CheckBox fx:id="flip" mnemonicParsing="false" onAction="#onFlipAction" text="Flip" />
                        <CheckBox fx:id="useColor" mnemonicParsing="false" onAction="#onUseColorAction" selected="true" text="Use Color" />
                        <CheckBox fx:id="fillFace" mnemonicParsing="false" onAction="#onFillFaceAction" selected="true" text="FillFace" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <CheckBox fx:id="shade" mnemonicParsing="false" onAction="#onShadeAction" text="Shade" />
                        <CheckBox fx:id="drawEdge" mnemonicParsing="false" onAction="#onDrawEdgeAction" selected="true" text="Draw Edge" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <ButtonBar>
                           <buttons>
                              <Button mnemonicParsing="false" onAction="#onExportOripaAction" text="Export" />
                           </buttons>
                        </ButtonBar>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Left click: Drag  &#10;Right click: Rotate &#10;Scroll: Zoom">
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <TextArea fx:id="oripaLog" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
         </children>
         <GridPane.margin>
            <Insets top="10.0" />
         </GridPane.margin>
      </VBox>
   </children>
</GridPane>
