<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ovgu.creasy.ui.MainWindow">
   <children>
      <MenuBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="25.0" minWidth="640.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#onMenuImportAction" text="Import" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="resetMenuItem" disable="true" mnemonicParsing="false" onAction="#onMenuResetAction" text="Reset" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="View">
               <items>
                  <MenuItem fx:id="foldedModelMenuItem" disable="true" mnemonicParsing="false" onAction="#onShowFoldedModelAction" text="Folded Model" />
                  <MenuItem fx:id="zoomInMenuItem" accelerator="PLUS" disable="true" mnemonicParsing="false" onAction="#onZoomInMenuItem" text="Zoom In" />
                  <MenuItem fx:id="zoomOutMenuItem" accelerator="MINUS" disable="true" mnemonicParsing="false" onAction="#onZoomOutMenuItem" text="Zoom Out" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Examples">
               <items>
                   <MenuItem mnemonicParsing="false" onAction="#onLoadExampleBird" text="Bird" />
                   <MenuItem mnemonicParsing="false" onAction="#onLoadExamplePenguin" text="Penguin" />
                   <MenuItem mnemonicParsing="false" onAction="#onLoadExampleCrane" text="Crane" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#onHelpCP" text="What are Crease Patterns" />
                  <MenuItem mnemonicParsing="false" onAction="#onHelpAbout" text="About" />
              </items>
            </Menu>
         </menus>
      </MenuBar>
      <GridPane fx:id="mainGrid" prefHeight="700.0" prefWidth="860.0" VBox.vgrow="ALWAYS">
         <columnConstraints>
            <ColumnConstraints percentWidth="70.0" />
            <ColumnConstraints maxWidth="424.0" minWidth="10.0" percentWidth="30.0" prefWidth="253.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
         </rowConstraints>
         <children>
            <GridPane fx:id="canvasGrid">
              <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints percentHeight="70.0" vgrow="ALWAYS" />
                <RowConstraints percentHeight="30.0" vgrow="ALWAYS" />
              </rowConstraints>
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                    <content>
                      <AnchorPane>
                           <children>
                              <HBox fx:id="history" alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children></AnchorPane>
                    </content>
                  </ScrollPane>
                  <ScrollPane fx:id="canvasHolder" fitToHeight="true" fitToWidth="true" hbarPolicy="ALWAYS" pannable="true" vbarPolicy="ALWAYS" />
               </children>
            </GridPane>
            <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
              <content>
                <AnchorPane>
                     <children>
                        <VBox fx:id="steps" alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </children>
      </GridPane>
   </children>
</VBox>
