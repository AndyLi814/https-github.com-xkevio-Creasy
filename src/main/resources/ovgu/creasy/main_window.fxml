                              <Text stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0" text="Possible steps">
                                 <font>
                                    <Font name="Segoe UI" size="18.0" />
                                 </font>
                              </Text>
                              <Separator prefWidth="200.0" />
                              <VBox fx:id="steps" alignment="CENTER" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
              <content>
                <AnchorPane>
                     <children>
                        <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="206.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Text stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0" text="History">
                                 <font>
                                    <Font name="Segoe UI" size="18.0" />
                                 </font>
                              </Text>
                              <Separator prefWidth="200.0" />
                              <VBox fx:id="history" alignment="CENTER" prefHeight="0.0" prefWidth="0.0" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </children>
      </GridPane>
   </children>
</VBox>
